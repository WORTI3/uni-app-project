{% macro basicForm(params) %}
<form action="{{ params.url }}" method="post">
    {% include "../_includes/_csrf.njk" %}
    <div class="relative">
        <label for="username" class="text-gray-400">Username or Email</label>
        <input id="username" name="username" type="text" placeholder="Username" autocomplete="username" required autofocus class="w-full text-sm px-4 py-3 bg-gray-200 focus:bg-gray-100 border  border-gray-200 rounded-lg focus:outline-none focus:border-sky-600 mb-6">
    </div>
    <div class="relative">
        <label for="current-password" class="text-gray-400">Password</label>
        <input id="current-password" name="password" placeholder="Password" autocomplete="current-password" required class="text-sm px-4 py-3 rounded-lg w-full bg-gray-200 focus:bg-gray-100 border border-gray-200 focus:outline-none focus:border-sky-600 mb-6">
    </div>
    {# <div class="flex items-center justify-between">
			<div class="text-sm ml-auto">
				<a href="#" class="">
					Forgot your password?
				</a>
			</div>
		</div> #}
    <button type="submit" class="w-full flex justify-center bg-sky-800 hover:bg-sky-600 text-gray-100 p-3  rounded-lg tracking-wide font-semibold  cursor-pointer transition ease-in duration-500">
        {{ params.buttonText }}
    </button>
</form>
{% endmacro %}

{% macro header(params) %}
    <div class="mb-5">
		<h3 class="font-semibold text-2xl text-gray-800">{{ params.heading }}</h3>
		<p class="text-gray-400">{{ params.subHeading }} {% if params.link %}<a href="{{ params.link }}" class="text-sm font-bold text-sky-600 hover:text-sky-600">{{ params.linkText }}</a>{% endif %}</p>
	</div>
{% endmacro %}